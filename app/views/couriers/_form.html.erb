<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/error_messages', obj: @courier %>
      <%= form_with(model: @courier, class: "shadow p-3 mb-3 bg-info rounded", local: true) do |f| %>
        <div class="form-group row">
          <%= f.label :name, class: "col-2 col-form-label text-light" %>
          <div class="col-8">
            <%= f.text_field :name, class: "form-control shadow rounded", placeholder: "Enter a name" %>
          </div>
        </div>
        <div class="form-group row">
          <%= f.label :email, class: "col-2 col-form-label text-light" %>
          <div class="col-8">
            <%= f.email_field :email, rows: 10, class: "form-control shadow rounded", placeholder: "Enter email address" %>
          </div>
        </div>
        <div class="form-group row justify-content-center">
          <%= f.submit(@courier.new_record? ? "Create courier" : "Update courier", class: "btn btn-outline-light btn-lg") %>
        </div>
      <% end %>
    </div>
    <div class="mb-3">
      <%= link_to '[ Cancel and return to couriers ]', :couriers, class: "text-info" %>
    </div>
  </div>
</div>
